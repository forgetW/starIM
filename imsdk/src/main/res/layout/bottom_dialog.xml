<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_audio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/atom_ui_input_height"
            android:gravity="center"
            android:text="语音通话"
            android:textColor="@color/atom_ui_light_gray_33"
            android:textSize="@dimen/atom_ui_text_size_large" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/atom_ui_light_gray_DD" />

        <TextView
            android:id="@+id/btn_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/atom_ui_input_height"
            android:gravity="center"
            android:text="视频通话"
            android:textColor="@color/atom_ui_light_gray_33"
            android:textSize="@dimen/atom_ui_text_size_large" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/atom_ui_input_height"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text_sticker_red_easy_photos"
        android:textSize="@dimen/atom_ui_text_size_large" />
</LinearLayout>