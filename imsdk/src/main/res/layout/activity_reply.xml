<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lock_people_bg">

    <ImageView
        android:id="@+id/userIcon"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_72"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_male" />

    <TextView
        android:id="@+id/tv_invite_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="188233333邀请你视频通话"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="75dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bt_invite_drop"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_toolbar_p2p_hangup_pressed"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拒绝"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="75dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bt_invite_accept"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_call_accept"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接听"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>