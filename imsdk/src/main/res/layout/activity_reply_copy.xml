<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lock_people_bg">
    <FrameLayout
        android:background="#111E2E"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:fitsSystemWindows="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/shield" />

        <TextView
            android:id="@+id/encryption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="加密通话"
            android:textColor="@color/white_easy_photos"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <com.qunar.im.ui.view.CircleImageView
        android:id="@+id/userIcon"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_120"
        android:scaleType="fitXY"
        android:src="@drawable/avatar_male" />

    <TextView
        android:id="@+id/tv_invite_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="郑运"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_22" />

    <TextView
        android:id="@+id/tv_invite_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_invite_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/atom_ui_prompts_action_height"
        android:text="邀请你进行视频会议"
        android:textColor="#7D818D"
        android:textSize="@dimen/sp_18" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_62"
        android:layout_marginBottom="@dimen/dp_25"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bt_invite_drop"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_68"
            android:background="@drawable/ic_toolbar_p2p_hangup_pressed"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拒绝"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/dp_62"
        android:layout_marginBottom="@dimen/dp_25"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bt_invite_accept"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_68"
            android:background="@drawable/ic_call_accept"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接听"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</RelativeLayout>